@model IEnumerable<projectManagementSys.Models.ApprovedProject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPM.cshtml";
}

<h2 class="main-title-w3layouts mb-2 text-center">Project Table</h2>

<!--<p>
   @* @Html.ActionLink("Create New", "Create")*@
</p>-->
<div class="blank-page-content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>

                                    <th>
                                        @Html.DisplayNameFor(x => x.project.Avilable)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(x => x.project.Start_Date)
                                    </th><!-- <th>Project Name</th>-->
                                    <th>
                                        @Html.DisplayNameFor(x => x.project.End_Date)
                                    </th>

                                    <th>Action</th>
                                    <th>Action</th>
                                </tr>

                                @foreach (var row in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(x => row.project.Avilable)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(x => row.project.Start_Date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(x => row.project.End_Date)
                                        </td>
                                        <td>
                                            <div class="btn btn-secondary">
                                                @Html.ActionLink("Details", "DetailsTeam", new { id = row.project_id })
                                            </div>
                                        </td>
                                        <td>
                                            <div class="btn btn-danger">

                                                @Html.ActionLink("Delete", "Delete", new { id = row.project_id})

                                            </div>
                                        </td>
                                    </tr>
                                }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
